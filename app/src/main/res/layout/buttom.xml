<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="@drawable/bottom_bar"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/id_tab_leben"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/id_tab_leben_img"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:background="#00000000"
            android:clickable="false"
            android:src="@drawable/leben_normal" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="首页"
            android:textColor="#ffffff" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/id_tab_frd"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/id_tab_frd_img"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:scaleType="fitXY"
            android:background="#00000000"
            android:clickable="false"
            android:src="@drawable/find_frd_normal" />

        <TextView
            android:layout_width="34dp"
            android:layout_height="wrap_content"
            android:text="排行"
            android:gravity="center"
            android:textColor="#ffffff" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/id_tab_address"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/id_tab_address_img"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:scaleType="fitXY"
            android:background="#00000000"
            android:clickable="false"
            android:src="@drawable/address_normal" />

        <TextView
            android:layout_width="39dp"
            android:layout_height="wrap_content"
            android:text="发现"
            android:gravity="center"
            android:textColor="#ffffff" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/id_tab_setting"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="1">
        <ImageButton
            android:id="@+id/id_tab_setting_img"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:scaleType="fitXY"
            android:clickable="false"
            android:src="@drawable/settings_normal"
            android:background="#00000000"/>

        <TextView
            android:layout_width="34dp"
            android:layout_height="wrap_content"
            android:text="我的"
            android:gravity="center"
            android:textColor="#ffffff" />
    </LinearLayout>

</LinearLayout>
